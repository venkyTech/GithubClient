<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:cardElevation="2dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ImgUser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/TxtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="status"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/TxtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/TxtStatus"
            android:layout_toRightOf="@+id/ImgUser"
            android:text="Title"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TxtIssueInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TxtTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/TxtStatus"
            android:layout_toRightOf="@+id/ImgUser"
            android:text="Updated on 25-04-2018 by Venkat" />

        <TextView
            android:id="@+id/TxtIssueDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TxtIssueInfo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/TxtStatus"
            android:layout_toRightOf="@+id/ImgUser"
            android:maxLength="200"
            android:text="Ths agkn nzng jnjgjn "
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>